{
  "name": "@cursorless/cursorless-org",
  "version": "0.1.0",
  "description": "The cursorless.org website",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "./out/index.js",
  "types": "./out/index.d.ts",
  "exports": {
    ".": {
      "cursorless:bundler": "./src/index.ts",
      "default": "./out/index.js"
    }
  },
  "postcss": {
    "plugins": {
      "@tailwindcss/postcss": {}
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "http-server out -a 127.0.0.1 -p 8085",
    "lint": "next lint",
    "compile": "tsc --build",
    "watch": "tsc --build --watch",
    "clean": "rm -rf ./out tsconfig.tsbuildinfo ./dist ./build"
  },
  "dependencies": {
    "@cursorless/cheatsheet": "workspace:*",
    "@cursorless/common": "workspace:*",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.1.6",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-player": "^3.4.0"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "4.1.17",
    "@types/mdx": "^2.0.13",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
